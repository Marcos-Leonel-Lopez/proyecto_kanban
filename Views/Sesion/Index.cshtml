@{
    ViewData["Title"] = "Login";
}
@model LoguinViewModel
<section id="formulario_login">

    <form asp-controller="Sesion" asp-action="Login" method="post" enctype="multipart/form-data">
        <fieldset>
            <legend>Iniciar sesion</legend>
            <section class=" d-flex justify-content-start mb-3" id="primer_sec">
                <section class="me-3 mt-1 ">
                    <label asp-for="Username" class="form-label">Usuario</label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </section>
                <section class="me-3 mt-1">
                    <label asp-for="Password" class="form-label">Contraseña</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </section>
            </section>
            <section class="d-flex justify-content-start mb-2 ">
                <a asp-controller="Home" asp-action="Index">
                    <button type="button" class="btn btn-secondary me-1"> Volver</button>
                </a>
                <button type="submit" class="btn btn-primary ms-1">Ingresar</button>
            </section>
        </fieldset>
    </form>
</section>


@if (ViewData["ErrorMessage"] != null)
{
    <div class="modal fade show" tabindex="-1" style="display: block; background-color: rgba(0, 0, 0, 0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Error</h5>
                </div>
                <div class="modal-body">
                    <p>@ViewData["ErrorMessage"]</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="closeModal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById("closeModal").addEventListener("click", function () {
            window.location.href = '@Url.Action("Index", "Sesion")';
        });

        // Auto-cerrar después de 5 segundos
        setTimeout(function () {
            window.location.href = '@Url.Action("Index", "Sesion")';
        }, 3000);
    </script>
}