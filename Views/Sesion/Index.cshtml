@{
    ViewData["Title"] = "Login";
}
@model LoguinViewModel

<section class="container mt-5">
    <section class="card shadow p-4" id="formulario_login">
        <h2 class="text-center mb-4">Iniciar Sesión</h2>
        <form asp-controller="Sesion" asp-action="Login" method="post" enctype="multipart/form-data">
            <section>
                <section class="mb-3 mt-1 ">
                    <label asp-for="Username" class="form-label"> <i class="bi bi-person"></i> Usuario</label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </section>
                <section class="mb-3 mt-1 ">
                    <label asp-for="Password" class="form-label"><i class="bi bi-key"></i> Contraseña</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </section>
            </section>
            <section class="d-flex justify-content-between">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver</a>
                <button type="submit" class="btn btn-primary">Ingresar</button>
            </section>
        </form>
    </section>
</section>

@if (ViewData["ErrorMessage"] != null)
{
    <section class="modal fade show" tabindex="-1" style="display: block; background-color: rgba(0, 0, 0, 0.5);">
        <section class="modal-dialog">
            <section class="modal-content">
                <section class="modal-header">
                    <h5 class="modal-title">Error</h5>
                </section>
                <section class="modal-body">
                    <p>@ViewData["ErrorMessage"]</p>
                </section>
                <section class="modal-footer">
                    <button type="button" class="btn btn-primary" id="closeModal">Aceptar</button>
                </section>
            </section>
        </section>
    </section>
    <script>
        document.getElementById("closeModal").addEventListener("click", function () {
            window.location.href = '@Url.Action("Index", "Sesion")';
        });

        setTimeout(function () {
            window.location.href = '@Url.Action("Index", "Sesion")';
        }, 3000);
    </script>
}
