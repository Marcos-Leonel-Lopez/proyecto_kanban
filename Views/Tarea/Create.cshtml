@{
    ViewData["Title"] = "Crear una Tarea";
}

@model CrearTareaViewModel

<section class="container mt-4">
    <h2 class="text-center mb-4">Crear una Tarea</h2>
    <div class="row">
        <!-- Formulario de creación -->
        <div class="col-md-6">
            <div class="card shadow cuadro-tarea">
                <div class="card-body">
                    @await Component.InvokeAsync("TareaCrear", new { model = Model })
                </div>
            </div>
        </div>

        <!-- Sección de lista de tareas -->
        <div class="col-md-6">
            <div class="card shadow cuadro-tarea" style="overflow-y: auto;">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Tareas recientes</h5>
                </div>
                <div class="card-body">
                    @foreach (var tablero in Model.TareasCreadas)
                    {
                        <div class="mb-3">
                            <h6 class="fw-bold">@tablero.Nombre_tablero</h6>
                            <ul class="list-group">
                                @foreach (var tarea in tablero.Tareas)
                                {
                                    <li class="list-group-item">@tarea.Nombre</li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
