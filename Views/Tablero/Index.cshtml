@{
    ViewData["Title"] = "Gestión de Tableros";
}
<section class="container">
    <div class="text-left">
        <h1>Gestión de Tableros</h1>
        <ul class="list-group">
            <li class="list-group-item">
                <a asp-controller="Tablero" asp-action="GetByUsuario">Ver mis tableros</a>
            </li>
            <li class="list-group-item">
                <a asp-controller="Tablero" asp-action="GetAll">Ver todos los tableros</a>
            </li>
            <li class="list-group-item">
                <a asp-controller="Tablero" asp-action="Create">Crear un nuevo tablero</a>
            </li>
        </ul>
        <a href="@Url.Action("Index", "Home")" class="text-white text-decoration-none">
            <button type="button" class="btn btn-secondary mt-4">
                Volver
            </button>
        </a>
</section>
