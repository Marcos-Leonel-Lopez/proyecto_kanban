@{
    ViewData["Title"] = "Gestión de Tableros";
}
<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Gestión de Tableros</h4>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <a asp-controller="Tablero" asp-action="GetByUsuario">Ver mis tableros</a>
            </li>
            <li class="list-group-item">
                <a asp-controller="Tablero" asp-action="GetAll">Ver todos los tableros</a>
            </li>
            <li class="list-group-item">
                <a asp-controller="Tablero" asp-action="Create">Crear un nuevo tablero</a>
            </li>
        </ul>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary w-100 mt-2">Volver</a>
        </div>
    </div>
</div>

