@{
    Layout = "_Layout"; 
    ViewBag.Title = "Error";
}
@model MyErrorViewModel

<div class="container text-center mt-5">
    <div class="alert alert-danger p-4 rounded shadow">
        <h2 class="fw-bold">⚠ Error @Model.StatusCode</h2>
        <p class="fs-5">@Model.ErrorMessage</p>
        <p class="text-muted">Serás redirigido en <span id="contador">5</span> segundos...</p>
        <a asp-asp-controller="@Model.Controller" asp-action="Index" class="btn btn-secondary">Volver ahora</a>
    </div>
</div>

<script>
    let seconds = 5;
    const contadorElement = document.getElementById("contador");
    const contador = setInterval(() => {
        seconds--;
        contadorElement.textContent = seconds;
        if (seconds <= 0) {
            clearInterval(contador);
            window.location.href = "@Url.Action("Index", @Model.Controller)";
        }
    }, 1000);
</script>
