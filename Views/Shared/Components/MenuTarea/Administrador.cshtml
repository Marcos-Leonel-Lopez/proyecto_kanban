<ul class="list-group list-group-flush">
    <li class="list-group-item">
        <a asp-controller="Tarea" asp-action="Create">Crear tareas</a>
    </li>
    <li class="list-group-item">
        <a asp-controller="Tarea" asp-action="GetByUsuario" asp-route-idUsuario="@Model">Ver mis tareas</a>
    </li>
    <li class="list-group-item">
        <form asp-controller="Tarea" asp-action="GetByUsuario" method="get" class="d-flex align-items-center">
            <label for="idUsuario" class="form-label me-2">Ver tareas del usuario:</label>
            <input type="text" id="idUsuario" name="idUsuario" class="form-control me-2" required />
            <button type="submit" class="btn btn-outline-primary">Ver Tareas</button>
        </form>
    </li>
    <li class="list-group-item">
        <form asp-controller="Tarea" asp-action="GetByTablero" method="get" class="d-flex align-items-center">
            <label for="idTablero" class="form-label me-2">Ver tareas del tablero:</label>
            <input type="text" id="idTablero" name="idTablero" class="form-control me-2" required />
            <button type="submit" class="btn btn-outline-primary">Ver Tareas</button>
        </form>
    </li>
</ul>
