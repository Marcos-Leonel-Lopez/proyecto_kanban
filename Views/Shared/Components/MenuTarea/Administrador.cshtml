<ul class="list-group list-group-flush">
    <li class="list-group-item">
        <a asp-controller="Tarea" asp-action="Create"><i class="bi bi-plus-circle-fill me-3"></i>Crear tareas</a>
    </li>
    <li class="list-group-item">
        <a asp-controller="Tarea" asp-action="GetByUsuario" asp-route-idUsuario="@Model"><i
                class="bi bi-list-task me-3"></i>Ver mis tareas</a>
    </li>
    <li class="list-group-item">
        <form asp-controller="Tarea" asp-action="GetByUsuario" method="get" class="d-flex align-items-center">
            <label for="idUsuario" class="form-label me-2"><i class="bi bi-search me-3"></i>Ver tareas del
                usuario:</label>
            <select id="idUsuario" name="idUsuario" class="form-select me-2" required>
                @foreach (var usuario in (List<UsuarioViewModel>)ViewData["Usuarios"])
                {
                    <option value="@usuario.Id_usuario">@usuario.Nombre</option>
                }
            </select>
            <button type="submit" class="btn btn-outline-primary">Ver Tareas</button>
        </form>
    </li>
</ul>
