<div class="card shadow-lg border-0">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Gestión de Usuarios</h4>
    </div>
    <div class="card-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <a asp-controller="Usuario" asp-action="GetAll">Ver lista completa de usuarios</a>
            </li>
            <li class="list-group-item">
                <form asp-controller="Usuario" asp-action="GetById" method="get" class="d-flex align-items-center">
                    <label for="idUsuario" class="form-label me-2">Ver Usuario por ID:</label>
                    <input type="text" id="idUsuario" name="idUsuario" class="form-control me-2" required />
                    <button type="submit" class="btn btn-primary">Ver Usuario</button>
                </form>
            </li>
            <li class="list-group-item">
                <a asp-controller="Usuario" asp-action="Create">Crear un nuevo usuario</a>
            </li>
            <li class="list-group-item">
                <a asp-controller="Usuario" asp-action="ListToEdit">Editar usuarios</a>
            </li>
            <li class="list-group-item">
                <a asp-controller="Usuario" asp-action="UpdatePass">Cambiar contraseña</a>
            </li>
        </ul>
    