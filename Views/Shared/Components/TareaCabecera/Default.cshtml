@model TareaCabeceraViewModel
@if (Model.EsPropietario == true)
{
    <section class="d-flex justify-content-between align-items-center flex-wrap">
    @if (Model.IdUsuarioAsignado != null)
    {
        <h6 class="card-subtitle mb-2 text-muted"> Asignado a: @Model.Usuarios.FirstOrDefault(u => u.Id_usuario == Model.IdUsuarioAsignado)?.Nombre </h6>
    }
    else
    {
        <span class="badge bg-warning text-dark">Sin asignar</span>
    }
        <a asp-controller="Tarea" asp-action="Delete" asp-route-idTarea="@Model.IdTarea" class="btn btn-outline-danger btn-sm">
            @* <button><i class="bi bi-trash"></i></button> *@
            <i class="bi bi-trash-fill danger"></i>
        </a>
                
    </section>
}