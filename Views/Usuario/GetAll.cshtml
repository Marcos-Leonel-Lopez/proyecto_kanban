@{
    ViewData["Title"] = "Todos los Usuarios";
}
@model List<DataUsuario>;

<section class="container">
    <table class="table table-hover" id="tabla-productos">
        <thead>
            <tr>
                <th scope="col" class="col-1">Id</th>
                <th scope="col" class="col-3">Nombre</th>
                <th scope="col" class="col-3">Rol</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataUsuario usuario in Model)
            {
                <tr>
                    <td scope="col" class="col-1">@usuario.Id</td>
                    <td scope="col" class="col-3">@usuario.Nombre</td>
                    <td scope="col" class="col-3">@usuario.Rol</td>
                </tr>
            }

        </tbody>
    </table>
    <a href="@Url.Action("Index", "Usuario")" class="btn btn-secondary mt-4 text-white">Volver</a>

</section>