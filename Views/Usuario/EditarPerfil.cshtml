@model DataUsuario

@{
    ViewData["Title"] = "Editar Perfil de Usuario";
}

<section class="container">
    <h3>Editar Perfil de Usuario</h3>
    <form asp-controller="Usuario" asp-action="EditPerfil" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <section class="d-flex flex-column">
            <section class="d-flex flex-column justify-content-start mb-2 col-6">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </section>
            <section class="d-flex flex-column justify-content-start mb-2 col-6">
                <label asp-for="Rol" class="form-label"></label>
                <select asp-for="Rol" class="form-select" asp-items="Html.GetEnumSelectList<MisEnums.RolUsuario>()">
                    <option value="">Seleccione un rol...</option>
                </select>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </section>
            <section class="d-flex justify-content-start mb-2">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="GetAll" class="btn btn-secondary">Cancelar</a>
            </section>
        </section>
    </form>
</section>
