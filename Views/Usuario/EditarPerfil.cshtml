@{
    ViewData["Title"] = "Editar Perfil de Usuario";
}
@model UsuarioViewModel

<section class="container mt-4">
    <h2 class="text-center mb-4">Editar Perfil de Usuario</h2>
    <div class="card shadow">
        <div class="card-body">
            <form asp-controller="Usuario" asp-action="EditarPerfil" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id_usuario" />
                
                <div class="row">
                    <!-- Nombre -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Nombre" class="form-label fw-bold"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <!-- Rol -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Rol" class="form-label fw-bold"></label>
                        <select asp-for="Rol" class="form-select" asp-items="Html.GetEnumSelectList<MisEnums.RolUsuario>()">
                            <option value="">Seleccione un rol...</option>
                        </select>
                        <span asp-validation-for="Rol" class="text-danger"></span>
                    </div>
                </div>

                <!-- Botones de acciÃ³n -->
                <div class="d-flex gap-2 mt-3">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-controller="Usuario" asp-action="ListToEdit" class="btn btn-secondary">Volver</a>
                </div>
            </form>
        </div>
    </div>
</section>
